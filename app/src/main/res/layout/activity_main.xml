<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kimhyun.solomon_go.MainActivity">

    <Button
        android:id="@+id/btn_Main_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Main_Setting"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_Main_Solostop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="솔로스탑"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Main_Profile"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_Main_Nearsolomon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주변 솔로몬"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Main_Solostop"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_Main_Bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가방"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Main_Nearsolomon"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_Main_Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_Main_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="357dp" />
</android.support.constraint.ConstraintLayout>
